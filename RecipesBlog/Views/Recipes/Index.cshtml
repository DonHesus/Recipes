            <td>@Html.DisplayFor(model => model.Proteins)</td>
            <td>@Html.DisplayFor(model => model.Fats)</td>
        </tr>
    </table>
    <p>Opis</p>
    <p>@Html.DisplayFor(model => model.Description)</p>
</div>
