@model RecipesBlog.Models.Recipe

@{
    ViewBag.Title = "Index";
}

<h2>Najnowsze wpisy</h2>

<div class="jumbotron">
    <h1>@Html.DisplayFor(model => model.Name)</h1>
    <table class="table">
        <tr>
            <th>Kalorie</th>
            <th>Węglowodany</th>
            <th>Białko</th>
            <th>Tłuszcze</th>
